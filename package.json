    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.6",
    "mocha": "^4.0.1",
    "mocha-loader": "^1.1.1",
    "ncp": "^2.0.0",
    "react": "15",
    "react-dom": "15",
    "rimraf": "^2.6.2",
