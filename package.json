{
  "name": "test-drive-react",
  "version": "0.8.1",
  "description": "Opinionated library for Test-Driven Development of React Components.",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc && ncp lib dist/lib",
    "prepare": "yarn build",
    "test": "yarn test:browser",
    "test:browser": "karma start --single-run",
    "start": "webpack-dev-server --progress"
  },
  "peerDependencies": {
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "dependencies": {
    "test-drive": "^0.6.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-dom": "^0.0.6",
    "@types/mocha": "^5.2.0",
    "@types/react": "16",
    "@types/react-dom": "16",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^2.7.29",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.1.1",
    "mocha-loader": "^1.1.3",
    "ncp": "^2.0.0",
    "react": "16",
    "react-dom": "16",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.2.0",
    "typescript": "~2.8.3",
    "webpack": "^4.7.0",
    "webpack-dev-server": "^3.1.4"
  },
  "files": [
    "dist/src",
    "dist/lib"
  ],
  "repository": {
    "type": "git",
