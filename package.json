{
  "name": "test-drive-react",
  "version": "1.0.0",
  "description": "Opinionated library for Test-Driven Development of React Components.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p src --outDir cjs --module commonjs",
    "build:esm": "tsc -p src --outDir esm --module esnext",
    "lint": "tslint -p tsconfig.base.json",
    "pretest": "yarn lint",
    "test": "mocha-pup \"./test/**/*.ts?(x)\"",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "dependencies": {
    "test-drive": "^1.0.3"
  },
  "devDependencies": {
    "@ts-tools/node": "^0.9.8",
    "@ts-tools/webpack-loader": "^0.8.12",
    "@types/chai": "^4.1.7",
    "@types/chai-dom": "^0.0.7",
    "@types/mocha": "^5.2.7",
    "@types/react": "16",
    "@types/react-dom": "16",
    "@types/sinon": "^7.0.12",
    "@types/sinon-chai": "^3.2.2",
    "mocha": "^6.1.4",
    "mocha-pup": "^0.1.14",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "tslint": "^5.17.0",
    "typescript": "~3.5.1",
    "webpack": "^4.33.0"
  },
  "files": [
    "cjs",
    "esm",
    "src",
    "!src/tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive-react.git"
  },
  "author": "Jiri Tobisek",
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive-react/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive-react#readme",
  "license": "MIT"
}
