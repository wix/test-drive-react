{
  "name": "test-drive-react",
  "version": "1.0.0",
  "description": "Opinionated library for Test-Driven Development of React Components.",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir esm --module esnext",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx -f codeframe",
    "pretest": "yarn typecheck && yarn lint",
    "test": "mocha-pup \"./test/**/*.ts?(x)\"",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "react": ">=15.5.0",
    "react-dom": ">=15.5.0"
  },
  "dependencies": {
    "test-drive": "^1.0.4"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^1.1.2",
    "@types/chai": "^4.2.7",
    "@types/chai-dom": "^0.0.8",
    "@types/mocha": "^5.2.7",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-react": "^7.17.0",
    "mocha": "^6.2.2",
    "mocha-pup": "^1.1.3",
    "puppeteer": "^2.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "typescript": "~3.7.4",
    "webpack": "^4.41.5"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive-react.git"
  },
  "author": "Jiri Tobisek",
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive-react/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive-react#readme",
  "license": "MIT"
}
