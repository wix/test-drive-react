{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "sourceMap": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["es5", "es2015.promise", "dom"],
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
